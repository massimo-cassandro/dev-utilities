{
  "name": "@massimo-cassandro/dev-utilities",
  "version": "1.17.0",
  "description": "My collection of dev utilities",
  "bin": {
    "update-version": "./scripts/update-version/index.mjs",
    "upd@m": "./scripts/upd@m/index.mjs",
    "vscode-css-properties-list": "./scripts/vscode-css-properties-list/index.mjs",
    "create-favicons": "./scripts/create-favicons/index.mjs"
  },
  "type": "module",
  "scripts": {
    "layout-tools rollup": "npx rollup --config ./scripts/layout-tools/rollup.config.mjs --watch",
    "layout-tools postcss": "npx postcss ./scripts/layout-tools/layout-tools.css --output ./dist/layout-tools.css --verbose --config ./scripts/layout-tools/ --watch",
    "update-version": "node ./scripts/update-version/index.mjs",
    "upd@m": "node ./scripts/upd@m/index.mjs",
    "npm-publish": "npm publish"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "node",
    "dev tools"
  ],
  "author": "Massimo Cassandro",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/massimo-cassandro/dev-utilities.git#main"
  },
  "bugs": {
    "url": "https://github.com/massimo-cassandro/dev-utilities/issues"
  },
  "homepage": "https://github.com/massimo-cassandro/dev-utilities/tree/main#readme",
  "eslintConfig": {
    "extends": [
      "./node_modules/@massimo-cassandro/linters-config/eslintrc.js"
    ]
  },
  "stylelint": {
    "extends": "@massimo-cassandro/linters-config/stylelintrc.js"
  },
  "files": [
    "scripts/**/*",
    "docs/**/*",
    "dist/**/*"
  ],
  "engines": {
    "node": ">= 18.0.0",
    "npm": ">= 9.6.0"
  },
  "dependencies": {
    "chalk": "^5.1.2",
    "clipboardy": "^3.0.0",
    "imagemin": "^8.0.1",
    "imagemin-jpegtran": "^7.0.0",
    "imagemin-pngquant": "^9.0.2",
    "inquirer": "^9.1.4",
    "sharp": "^0.32.1",
    "svgo": "^3.0.2",
    "to-ico": "^1.1.5"
  },
  "devDependencies": {
    "@massimo-cassandro/linters-config": "^1.4.0",
    "@rollup/plugin-json": "^6.0.0",
    "@rollup/plugin-node-resolve": "^15.0.2",
    "@rollup/plugin-terser": "^0.4.3",
    "autoprefixer": "^10.4.14",
    "postcss": "^8.4.24",
    "postcss-advanced-variables": "^3.0.1",
    "postcss-banner": "^4.0.1",
    "postcss-cli": "^10.1.0",
    "postcss-csso": "^6.0.1",
    "postcss-import": "^15.1.0",
    "postcss-nested": "^6.0.1",
    "postcss-scss": "^4.0.6",
    "rollup": "^3.23.0"
  }
}